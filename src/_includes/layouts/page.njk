{% extends 'layouts/default.njk' %}

{% block header %}
  <section class="c-section c-section--intro">
    <h1 class="c-section__page-title">{{ title }}</h1>
    {% if summary %}
      <p role="doc-subtitle" class="u-line-decorate">{{ summary | markdownify_inline | safe }}</p>
    {% elif description %}
      <p role="doc-subtitle">{{ description | markdownify_inline | safe }}</p>
    {% endif %}
    {% block headerExtra %}{% endblock %}
  </section>
{% endblock %}

{% block content %}{% endblock %}
